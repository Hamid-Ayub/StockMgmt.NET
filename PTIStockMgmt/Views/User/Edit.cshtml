@model PTIStockMgmt.Models.user

@{
  ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "User", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary(true)
  @Html.HiddenFor(model => model.id)

  <fieldset>
    <legend>Edit</legend>

    <div class="control-group">
      <label class="control-label">Name</label>
      <div class="controls">
        @Html.TextBoxFor(model => model.name, null, new { @class = "", type = "text" })
        @Html.ValidationMessageFor(model => model.name)
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Password</label>
      <div class="controls">
        @Html.TextBoxFor(model => model.password, null, new { @class = "", type = "password" })
        @Html.ValidationMessageFor(model => model.password)
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Email</label>
      <div class="controls">
        @Html.TextBoxFor(model => model.email, null, new { @class = "", type = "text" })
        @Html.ValidationMessageFor(model => model.email)
      </div>
    </div>

    <div class="form-actions">
      <input class="btn btn-info" type="submit" value="Save" />
      <a href="@Url.Action("Index")" class="btn">Cancel</a>
    </div>

  </fieldset>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
  <script type="text/javascript">
    $(document).ready(function () {
      $('form').validate().form();
    });
  </script>
}
