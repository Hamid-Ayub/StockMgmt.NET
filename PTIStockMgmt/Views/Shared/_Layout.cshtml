<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    <style>@RenderSection("styles", required: false)</style>
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
          <img class="logo" style="float:left" src="@Url.Content("~/img/logo40.png")" />
          <a class="brand" href="/Home">Stock Management</a>
        <ul class="nav">
          <li id="Dash_nav"><a href="/Dash">Dash</a></li>
          <li id="Asset_nav"><a href="/Asset">Assets</a></li>
          <li id="Stock_nav"><a href="/Stock">Stock</a></li>
          <li id="Report_nav"><a href="/Reports">Reports</a></li>
          <li id="Location_nav"><a href="/Location">Locations</a></li>
          <li id="User_nav"><a href="/User">Users</a></li>
          @{
            if(Session["logged_in"] != null && (bool) Session["logged_in"] == true){
              <li id="Login_nav"><a href="/Login/Logout">Logout</a></li>
          } else {
              <li id="Login_nav"><a href="/Login">Login</a></li>
            }
          }
        </ul>
      </div><!--/.nav-collapse -->
    </div>

    <div class="container">
      @{ 
        if (ViewBag.Info != null) {
        <div class="alert alert-info">
          <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
          @ViewBag.Info
        </div>
      }
      
        if (ViewBag.Danger != null) {
        <div class="alert alert-danger">
          <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
          <strong>Warning: </strong>@ViewBag.Danger
        </div>
        }

        if (ViewBag.Success != null) {
        <div class="alert alert-success">
          <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
          @ViewBag.Success
        </div>
        }
      }

      @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

    @RenderSection("scripts", required: false)
    <script type="text/javascript">
      var base = window.location.pathname.split('/')[1];
      var navid = "#" + base + "_nav";
      $(navid).addClass("active");
    </script>

  </body>
</html>
