<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - PTIStockMgmt</title>
  <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
  <style type="text/css">
    body { padding-top: 50px; }
  </style>
  <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet">
  @Scripts.Render("~/bundles/modernizr")
  <style type="text/css">@RenderSection("styles", required: false)</style>
</head>
<body>
  <div class="container">
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <img class="logo" width="117" height="40" style="float:left" src="@Url.Content("~/img/logo100.png")" />
          <a class="brand" href="/">PTI Stock</a>
          <div style="height: 0px;" class="nav-collapse navbar-responsive-collapse collapse">
            <ul class="nav">
              <li id="Dash_nav"><a href="/Dash">Dash</a></li>
              <li id="Sales_nav"><a href="/Sales">Sales</a></li>
              <li id="Clients_nav"><a href="/Clients">Clients</a></li>
              <li id="Asset_nav"><a href="/Asset">Assets</a></li>
              <li id="Stock_nav"><a href="/Stock">Stock</a></li>
              <li id="Assembly_nav"><a href="/Assembly">Assemblies</a></li>
              <li id="Location_nav"><a href="/Location">Locations</a></li>
              <li id="User_nav"><a href="/User">Users</a></li>
              @{
                if (Session["logged_in"] != null && (bool)Session["logged_in"] == true)
                {
                  <li id="Login_nav"><a href="/Login/Logout">Logout</a></li>
                }
                else
                {
                  <li id="Login_nav"><a href="/Login">Login</a></li>
                }
              }
            </ul>
          </div>
        </div>
      </div><!--/.nav-collapse -->
    </div>

    @{
      if (ViewBag.Info != null)
      {
        <div class="alert alert-info">
          <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
          @ViewBag.Info
        </div>
      }

      if (ViewBag.Danger != null)
      {
        <div class="alert alert-danger">
          <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
          <strong>Warning: </strong>@ViewBag.Danger
        </div>
      }

      if (ViewBag.Success != null)
      {
        <div class="alert alert-success">
          <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
          @ViewBag.Success
        </div>
      }
    }

    @RenderBody()

  </div>

  @Scripts.Render("~/bundles/jquery")
  <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

  @RenderSection("scripts", required: false)
  <script type="text/javascript">
    var base = window.location.pathname.split('/')[1];

    if (base.length == 0) {
      base = "Dash"
    }

    var navid = "#" + base + "_nav";
    $(navid).addClass("active");
  </script>

</body>
</html>
