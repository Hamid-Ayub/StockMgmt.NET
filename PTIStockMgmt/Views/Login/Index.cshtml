@{
    ViewBag.Title = "Login";
}

@section styles {

  body {
    background-color: #f5f5f5;
  }

  .form-signin {
    max-width: 300px;
    padding: 19px 29px 29px;
    margin: 10px auto 20px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
       -moz-border-radius: 5px;
            border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
       -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
  }

}
  <form role="form" action="/Login" method="post" class="form-signin">
  <input type="hidden" name="return_to" value="@ViewBag.return_to" />
  <div class="control-group">
    <h3>Please sign in</h3>
    <div class="controls">
      <input class="input-block-level" type="text" name="username" placeholder="Username">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <input class="input-block-level" type="password" name="password" placeholder="Password">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-large">Sign in</button>
    </div>
  </div>
  </form>
