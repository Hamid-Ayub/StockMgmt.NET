@model PTIStockMgmt.Models.asset

@{
  ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Asset", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary(true)
  <fieldset>
    <legend>Create New</legend>

    <div class="control-group">
      <label class="control-label">Title</label>
      <div class="controls">
        @Html.TextBoxFor(model => model.title, null, new { placeholder = "Title", @class = "", type = "text" })
        @Html.ValidationMessageFor(model => model.title)<br />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Manufacturer</label>
      <div class="controls">
        @Html.TextBoxFor(model => model.maker, null, new { placeholder = "Manufacturer", @class = "", type = "text" })
        @Html.ValidationMessageFor(model => model.maker)<br />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Price</label>
      <div class="controls">
        <div class="input-append">
          @Html.TextBoxFor(model => model.price, null, new { placeholder = "Price", @class = "", type = "text" })
          <span class="add-on">cents</span>
        </div>
        @Html.ValidationMessageFor(model => model.price)<br />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Weight</label>
      <div class="controls">
        <div class="input-append">
          @Html.TextBoxFor(model => model.weight, null, new { placeholder = "Weight", @class = "", type = "text" })
          <span class="add-on">g</span>
        </div>
        @Html.ValidationMessageFor(model => model.weight)<br />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Volume</label>
      <div class="controls">
        <div class="input-append">
          @Html.TextBoxFor(model => model.volume, null, new { placeholder = "Volume", @class = "", type = "text" })
          <span class="add-on">mL</span>
        </div>
        @Html.ValidationMessageFor(model => model.volume)
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">SAP</label>
      <div class="controls">
        @Html.TextBoxFor(model => model.sap, null, new { placeholder = "SAP", @class = "", type = "text" })
        @Html.ValidationMessageFor(model => model.sap)
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Comment</label>
      <div class="controls">
        @Html.TextAreaFor(model => model.comment)
        @Html.ValidationMessageFor(model => model.comment)
      </div>
    </div>

    <div class="form-actions">
      <input type="submit" class="btn btn-success" value="Create" />
      <a href="@Url.Action("Index")" class="btn">Cancel</a>
    </div>
  </fieldset>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
