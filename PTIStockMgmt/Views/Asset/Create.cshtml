@model PTIStockMgmt.Models.asset
@using PTIStockMgmt.Helpers

@{
  ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Asset", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary(true)
  <fieldset>
    <legend>Create New</legend>

    @Html.FormGroup(model => model.title, "Title")

    <div class="control-group">
      <label class="control-label">Manufacturer</label>
      <div class="controls">
        @Html.TextBoxFor(model => model.maker, null, new { placeholder = "Manufacturer", @class = "", type = "text" })
        @Html.ValidationMessageFor(model => model.maker)<br />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Price</label>
      <div class="controls">
        <div class="input-append">
          @Html.TextBoxFor(model => model.price, null, new { placeholder = "Price", @class = "", type = "text" })
          <span class="add-on">cents</span>
        </div>
        @Html.ValidationMessageFor(model => model.price)<br />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Weight</label>
      <div class="controls">
        <div class="input-append">
          @Html.TextBoxFor(model => model.weight, null, new { placeholder = "Weight", @class = "", type = "text" })
          <span class="add-on">g</span>
        </div>
        @Html.ValidationMessageFor(model => model.weight)<br />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Volume</label>
      <div class="controls">
        <div class="input-append">
          @Html.TextBoxFor(model => model.volume, null, new { placeholder = "Volume", @class = "", type = "text" })
          <span class="add-on">mL</span>
        </div>
        @Html.ValidationMessageFor(model => model.volume)
      </div>
    </div>

    @Html.FormGroup(model => model.sap, "SAP")
    @Html.FormGroup(model => model.comment, "Comment")

    <div class="form-actions">
      @Html.Submit()
      @Html.Cancel()
    </div>
  </fieldset>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
